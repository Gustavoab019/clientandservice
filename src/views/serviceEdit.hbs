<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Update Servi√ßo</h1>

          <form action="/service/{{service._id}}/edit" method="post">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="serviceName"
                placeholder="Title"
                value="{{service.serviceName}}"
              />
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="description"
                rows="3"
                placeholder="Add a Description"
              >{{service.description}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="category"
                rows="3"
                placeholder="Add a Description"
              >{{service.category}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="timeWork"
                rows="3"
                placeholder="Add a Description"
              >{{service.timeWork}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="price"
                rows="3"
                placeholder="Add a Description"
              >{{service.price}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>